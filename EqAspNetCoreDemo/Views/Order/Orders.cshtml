
@{
    ViewBag.Title = "Data Filtering demo";
}
    <div class="eqjs-process-bar" id="ProcessBar"></div>
    <div class="container">
        <h4>Orders</h4>

        @Html.FilterBar()

        <div id="ResultPanel"></div>
    </div>

@section Styles  {
    <link rel="stylesheet" href="/css/eq.core.min.css">
}


@section scripts {
    <script src="/js/eq.all.min.js" type="text/javascript"></script>

    <!-- EasyQuery script files -->
    <script>
        window.addEventListener('load', () => {
            let options = {
                loadModelOnStart: true,
                clearResultOnQueryChange: false,
                broker: {
                    endpoint: "/data-filtering"
                },
                widgets: {
                    filterBar: {
                        queryPanel: {
                            attrElementFormat: "{entity} {attr}"
                        }
                    }
                },
                result: {
                    paging: {
                        useBootstrap: true
                    }
                }
            }
            let view = new easyquery.HtmlDataFilterView();
            view.init(options);
        });

    </script>
}
