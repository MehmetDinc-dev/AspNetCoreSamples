@{
    Layout = "_LayoutRoot";
    ViewData["Title"] = "Home Page";
}

<div class="col-md-12 header my-2">
    <div class="title">EasyQuery</div>
    <div class="sub-title">User-friendly ad-hoc query builder for your web-site</div>
    <div class="global-message"></div>
</div>

<div class="col-md-12">
    <div class="jumbotron p-3 p-md-5 rounded">
        <!--<div class="col-xl-6 px-0">-->
        <h1>EasyQuery for ASP.NET Core demo projects</h1>
        <p class="lead my-3">Here we present several demo projects with different layouts, database connections, front-end frameworks and other settings.</p>
        <!--</div>-->
    </div>
</div>

<div class="col-md-12">
    <div class="card flex-md-row shadow p-3 mb-5 bg-white rounded h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-3">
                <a class="text-dark" href="/advanced-search">Advanced Search</a>
            </h3>
            <p class="card-text mb-auto">Demo application that shows the most common use of EasyQuery controls</p>
            <a class="mt-3" href="/advanced-search">Open demo page</a>
        </div>
        <img class="card-img-right flex-auto d-none d-lg-block" alt="Ad-hoc reporting" src="https://korzh.com/static/images/inaction/action-mvc.png">
    </div>
</div>

<div class="col-md-12">
    <div class="card flex-md-row shadow p-3 mb-5 bg-white rounded h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-3">
                <a class="text-dark" asp-action="EasyReport">Ad-hoc reporting</a>
            </h3>
            <p class="card-text mb-auto">Demo ad-hoc reporting solution. Allows to create, change and save reports</p>
            <a class="mt-3" asp-action="EasyReport">Open demo page</a>
        </div>
        <img class="card-img-right flex-auto d-none d-lg-block" alt="Ad-hoc reporting" src="https://korzh.com/static/images/inaction/action-report.png">
    </div>
</div>

<div class="col-md-12">
    <div class="card flex-md-row shadow p-3 mb-5 bg-white rounded h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-3">
                <a class="text-dark" asp-action="DataFiltering">Data Filtering</a>
            </h3>
            <p class="card-text mb-auto">Demo application that shows a special Filter control working together with a data grid</p>
            <a class="mt-3" asp-action="DataFiltering">Open demo page</a>
        </div>
        <img class="card-img-right flex-auto d-none d-lg-block" alt="Ad-hoc reporting" src="https://korzh.com/static/images/inaction/action-filter.png">
    </div>
</div>
