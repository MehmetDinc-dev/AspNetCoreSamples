@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyQuery library samples</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
          crossorigin="anonymous"
          integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/blitzer/jquery-ui.css">

    <link rel="stylesheet" href="~/css/root.css" />

    @RenderSection("Styles", required: false)

</head>
<body>

    <header class="navbar border-bottom mb-3 p-0 container-fluid px-5">
        <div class="header my-2">
            <div class="logo-title">EasyQuery</div>
            <div class="sub-title">User-friendly ad-hoc query builder for your web-site</div>
        </div>
        <div class="nav-item dropdown project-dropdown">
            <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @ViewData["Title"]
            </a>
            <div class="dropdown-menu dropdown-menu-right project-menu" aria-labelledby="bd-versions">
                <a class="dropdown-item" href="/">Index</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/advanced-search">Advanced Search demo</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/adhoc-reporting">Ad-hoc reporting demo</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/data-filtering">Data Filtering demo</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/fulltext-search">Full-text Search demo</a>
            </div>
        </div>
    </header>
    <div class="global-message"></div>

    @RenderBody()

    <footer class="footer"></footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/jquery-ui.min.js" type="text/javascript"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"
            integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4=">
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
